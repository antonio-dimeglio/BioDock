<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.antoniodimeglio.biodock.biodock.controller.PipelineCreatorController"
            prefHeight="700.0" prefWidth="900.0">

    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <Label text="Pipeline Creator" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <Label text="Create and configure bioinformatics pipelines" textFill="#bdc3c7">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
            <content>
                <VBox spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </padding>

                    <!-- Basic Information Section -->
                    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <Label text="Basic Information" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px;" />

                        <GridPane hgap="15.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>

                            <Label text="Pipeline ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                            <TextField fx:id="idField" promptText="e.g., fastqc-base" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                       style="-fx-background-radius: 4; -fx-border-radius: 4;" />

                            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                            <TextField fx:id="nameField" promptText="e.g., FastQC Quality Control" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                       style="-fx-background-radius: 4; -fx-border-radius: 4;" />

                            <Label text="Version:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                            <TextField fx:id="versionField" promptText="e.g., 1.0.0" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                       style="-fx-background-radius: 4; -fx-border-radius: 4;" />
                        </GridPane>

                        <Label text="Description:" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                        <TextArea fx:id="descriptionArea" promptText="Describe what this pipeline does..."
                                  prefRowCount="3" wrapText="true" style="-fx-background-radius: 4; -fx-border-radius: 4;" />
                    </VBox>

                    <!-- Command Configuration Section -->
                    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <Label text="Command Configuration" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px;" />

                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <Label text="Commands:" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                            <Button fx:id="addCommandBtn" text="+ Add Command" onAction="#onAddCommand"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 4;" />
                        </HBox>

                        <VBox fx:id="commandsContainer" spacing="8.0" />
                    </VBox>

                    <!-- File Types Section -->
                    <HBox spacing="20.0">
                        <!-- Input File Types -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Input File Types" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                <Button fx:id="addInputTypeBtn" text="+" onAction="#onAddInputType"
                                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 50%; -fx-min-width: 25; -fx-min-height: 25;" />
                            </HBox>
                            <VBox fx:id="inputTypesContainer" spacing="5.0" />
                        </VBox>

                        <!-- Output File Types -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Output File Types" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                <Button fx:id="addOutputTypeBtn" text="+" onAction="#onAddOutputType"
                                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 50%; -fx-min-width: 25; -fx-min-height: 25;" />
                            </HBox>
                            <VBox fx:id="outputTypesContainer" spacing="5.0" />
                        </VBox>
                    </HBox>

                    <!-- Directory Configuration -->
                    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <Label text="Directory Configuration" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px;" />

                        <GridPane hgap="15.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>

                            <Label text="Input Directory:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                            <TextField fx:id="inputDirField" text="/data/input" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                       style="-fx-background-radius: 4; -fx-border-radius: 4;" />

                            <Label text="Output Directory:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #34495e; -fx-font-weight: bold;" />
                            <TextField fx:id="outputDirField" text="/data/output" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                       style="-fx-background-radius: 4; -fx-border-radius: 4;" />
                        </GridPane>
                    </VBox>

                    <!-- Dockerfile Section -->
                    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <Label text="Dockerfile" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px;" />
                            <Button fx:id="loadDockerfileBtn" text="Load from File" onAction="#onLoadDockerfile"
                                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 4;" />
                        </HBox>
                        <TextArea fx:id="dockerfileArea" promptText="Paste your Dockerfile content here..."
                                  prefRowCount="8" wrapText="true"
                                  style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-font-family: 'Courier New', monospace;" />
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Action Buttons -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>

            <Button fx:id="previewBtn" text="Preview JSON" onAction="#onPreview"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 4; -fx-min-width: 100;" />
            <Button fx:id="validateBtn" text="Validate" onAction="#onValidate"
                    style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-background-radius: 4; -fx-min-width: 100;" />
            <Button fx:id="saveBtn" text="Save Pipeline" onAction="#onSave"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 4; -fx-min-width: 100;" />
            <Button fx:id="cancelBtn" text="Cancel" onAction="#onCancel"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 4; -fx-min-width: 100;" />
        </HBox>
    </bottom>
</BorderPane>